<script>
const webhookURL = "PASTE_YOUR_WEBHOOK_HERE";

function showMenu(){
    document.getElementById("home").style.display = "none";
    document.getElementById("menu").style.display = "block";
}

function showOrder(){
    document.getElementById("menu").style.display = "none";
    document.getElementById("orderPage").style.display = "block";
}

function backToMenu(){
    document.getElementById("orderPage").style.display = "none";
    document.getElementById("menu").style.display = "block";
}

function sendOrder(){
    let bacon = document.querySelector('input[name="bacon"]:checked').value;
    let meal = document.querySelector('input[name="meal"]:checked').value;
    let tip = document.getElementById("tip").value;
    if(tip === "") tip = "0";

    let total = 5 + parseFloat(tip);

    let message =
        "**üçî New McIgo Order!**\n\n" +
        "ü•ì Bacon: " + bacon + "\n" +
        "üçü Meal: " + meal + "\n" +
        "üí∑ Base Price: ¬£5\n" +
        "üí∞ Tip: ¬£" + tip + "\n" +
        "üíµ Total: ¬£" + total.toFixed(2);

    fetch(webhookURL, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ content: message })
    });

    document.getElementById("status").innerText = "Order Complete. Please wait.";
}
</script>

